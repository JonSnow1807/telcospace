# Database
DATABASE_URL=postgresql://router_user:router_password@localhost:5432/router_optimizer

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File storage
STATIC_PATH=./static
UPLOAD_PATH=./static/uploads
HEATMAP_PATH=./static/heatmaps

# Application
DEBUG=true

# AI/LLM Configuration
# Option 1: Use Gemini API Key directly
GEMINI_API_KEY=your_gemini_api_key_here

# Option 2: Use Google Service Account (place info.json in project root)
# GOOGLE_CREDENTIALS_PATH=./info.json

# Anthropic API Key (optional, for Claude Vision fallback)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Wall Detection Mode
# Options: llm (recommended), hybrid, rasterscan, deepfloorplan, boundary, morphological, lsd, combined, ai_vision, cv
WALL_DETECTION_MODE=llm
